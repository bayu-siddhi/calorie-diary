<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="4dp"
    tools:layout_editor_absoluteY="27dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="37dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_marginHorizontal="10dp"
                    android:text="@string/calorie_in_check"
                    android:textSize="25sp"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="start"/>

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_profile"/>

            </LinearLayout>

            <!-- Diagram Calorie Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:id="@+id/progress_cals"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerVertical="true"
                        android:indeterminate="false"
                        android:max="1231"
                        android:progress="1000"
                        android:progressDrawable="@drawable/circular_progress_bar_primary"/>

                    <TextView
                        android:id="@+id/cals_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/angkautama"
                        android:textSize="18sp"
                        android:lineSpacingExtra="-3sp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/text_black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/text_black"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">

                <!-- Diagram Carbo Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ProgressBar
                            android:id="@+id/progress_carbs"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:indeterminate="false"
                            android:max="55"
                            android:progress="25"
                            android:progressDrawable="@drawable/circular_progress_bar_accent" />

                        <TextView
                            android:id="@+id/carbs_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/angkaprotein"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"
                            android:textColor="@color/text_black" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carbs"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <!-- Diagram Protein Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ProgressBar
                            android:id="@+id/progress_protein"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:indeterminate="false"
                            android:max="55"
                            android:progress="25"
                            android:progressDrawable="@drawable/circular_progress_bar_blue" />

                        <TextView
                            android:id="@+id/protein_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/angkaprotein"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"
                            android:textColor="@color/text_black" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/protein"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <!-- Diagram Fat Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ProgressBar
                            android:id="@+id/progress_fat"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:indeterminate="false"
                            android:max="55"
                            android:progress="25"
                            android:progressDrawable="@drawable/circular_progress_bar_secondary"  />

                        <TextView
                            android:id="@+id/fat_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/angkaprotein"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12sp"
                            android:textColor="@android:color/black" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fat"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Section Pilih Tanggal -->
            <Button
                android:id="@+id/buttonDatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_calender"
                android:drawableTint="@android:color/white"
                android:text="@string/today"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/meals"
                android:textSize="20sp"
                android:textColor="@color/text_black"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:id="@+id/add_food_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/yourmeals"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/addfood_dashboard"
                    android:textSize="18sp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_medium"/>

                <ImageView
                    android:id="@+id/plus"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_plus" />

            </LinearLayout>

            <!-- TODO: Jadikan recyclerview dan tambahkan tombol delete-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="10dp"
                android:text="Nasi goreng (200 g)"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="10dp"
                android:text="Mie goreng (150 g)"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"/>

            <!-- Height and weight Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/personal_data"
                android:textColor="@color/text_black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:text="@string/age"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="6dp" />

                <EditText
                    android:id="@+id/age_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:background="@drawable/text_input_rounded_corner"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/age"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:text="@string/weight_kg"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="6dp" />

                <EditText
                    android:id="@+id/weight_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:background="@drawable/text_input_rounded_corner"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/weight"
                    android:inputType="numberDecimal"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:text="@string/height_cm"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/height_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:background="@drawable/text_input_rounded_corner"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/height"
                    android:inputType="numberDecimal"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/accent"
                android:fontFamily="@font/poppins_bold"
                android:padding="10dp"
                android:text="@string/save_changes"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>