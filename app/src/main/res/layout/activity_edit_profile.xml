<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="37dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_back_arrow"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button_desc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/my_profile"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/text_black"
            android:textSize="25sp"/>

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginVertical="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:paddingEnd="5dp"
                android:text="@string/name"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:background="@drawable/text_input_rounded_corner"
                android:fontFamily="@font/poppins"
                android:hint="@string/name"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_black"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginVertical="16dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:paddingEnd="5dp"
                android:text="@string/email"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:background="@drawable/text_input_rounded_corner"
                android:fontFamily="@font/poppins"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_black"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- Start Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginVertical="16dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:paddingEnd="5dp"
                android:text="@string/start_weight"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/start_weight_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:background="@drawable/text_input_rounded_corner"
                android:fontFamily="@font/poppins"
                android:hint="@string/weight"
                android:inputType="number"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_black"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- Start Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginVertical="16dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:paddingEnd="5dp"
                android:text="@string/start_height"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/start_height_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:background="@drawable/text_input_rounded_corner"
                android:fontFamily="@font/poppins"
                android:hint="@string/height"
                android:inputType="number"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_black"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- Birth Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginVertical="16dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:paddingEnd="5dp"
                android:text="@string/birthdate"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/birthdate_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:background="@drawable/text_input_rounded_corner"
                android:fontFamily="@font/poppins"
                android:hint="@string/birthdate"
                android:inputType="date"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_black"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- Birth Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginVertical="16dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:paddingEnd="5dp"
                android:text="@string/gender"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:orientation="horizontal"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:background="@drawable/text_input_rounded_corner">

                <RadioButton
                    android:id="@+id/rdb_male_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:checked="true"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:minHeight="0dp"
                    android:minWidth="48dp"
                    android:layout_marginStart="0dp" />

                <RadioButton
                    android:id="@+id/rdb_female_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:checked="false"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:minHeight="0dp"
                    android:minWidth="48dp"
                    android:layout_marginStart="31dp" />

            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/submit_changes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/accent"
            android:fontFamily="@font/poppins_bold"
            android:padding="10dp"
            android:text="@string/finish"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>